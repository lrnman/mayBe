<!DOCTYPE html>
<html lang="<%- config.language || 'zh-CN' %>">
<head>
  <meta charset="utf-8">
  <meta name="viewport" content="width=device-width, initial-scale=1, maximum-scale=1">
  <%
  var title = page.title;
  if (is_current('tags/')){
    title = __('tags');
  }
  %>
  <title><%if (is_home()) {%><%= config.title %><% } else { %><%= title ? title.replace('<br />', ' ').substr(0, 10) : theme.unnamed %> - <%= config.title %> <% } %></title>
  <% if (theme.favicon){ %>
    <%- favicon_tag(theme.favicon) %>
  <% } %>

  <%- css(theme.stylesheets) %>
</head>
